#!/usr/bin/env bash
# Script: 0-change_your_home_IP
# Description: Configures localhost and facebook.com IP addresses on an Ubuntu server.

# Check if running inside Docker
if ! grep -q "docker" /proc/1/cgroup; then
    echo "This script should be run inside Docker."
    exit 1
fi

# Modify /etc/hosts file
sudo sed -i 's/127.0.0.1/127.0.0.2/' /etc/hosts
sudo sed -i 's/facebook.com/8.8.8.8/' /etc/hosts

# Clear DNS cache
sudo systemctl restart systemd-resolved.service

echo "Configuration updated successfully!"
